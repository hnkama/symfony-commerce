{% extends 'SyliusWebBundle:Frontend:layout.jiwen.html.twig' %}

{% block content %}

<div id="wrap" class="clearfix">
			<div class="page-header">
				<h1>登录 <small>基文商城</small></h1>
			</div>

{% if error %}
			<div class="alert alert-error">
    {{ error }}
				</div>
{% endif %}

				<form action="{{ path('fos_user_security_check') }}" method="post">
					<fieldset>
						<div class="control-group">
							<label for="username" class="control-label">Login</label>
							<div class="controls">
								<input type="text" id="username" name="_username" value="{{ last_username }}" />
							</div>
						</div>
						<div class="control-group">
							<label for="password" class="control-label">Password</label>
							<div class="controls">
								<input type="password" id="password" name="_password" />
							</div>
						</div>
						<div class="control-group">
							<div class="controls">
								Remember me? <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
							</div>
						</div>
					</fieldset>
					<div class="form-actions">
						<button type="submit" class="btn btn-primary btn-large" name="login"><i class="icon-lock"></i> Login</button>
					</div>
				</form>
			<!--qa start-->
		</div>

{% endblock %}
