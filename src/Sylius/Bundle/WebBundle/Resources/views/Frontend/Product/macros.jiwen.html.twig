{% macro list_with_banner(products, form, banner, size = 3) %}

{% import 'SyliusWebBundle:Backend/Macros:alerts.html.twig' as alerts %}

<div class="row-fluid">
    {% for product in products %}
		{% if loop.index == 2 %}
		<li class="sub-bn hover">
			{% if banner %}
			{{ banner|raw }}
			{% else %}
			<a href="{{ path('sylius_homepage') }}"><img src="/assets/images/bn-line.jpg"></a>
			{% endif %}
		</li>
		{% endif %}
		{% set bookmark_form = form %}
		{% include 'SyliusWebBundle:Frontend/Product:_single.li.html.twig' %}
    {% else %}
        {{ alerts.info('sylius.product.no_results'|trans) }}
    {% endfor %}
	</div>

{% endmacro %}
