{% extends 'BloggerAdminBundle::layout.html.twig' %}
{%block active%}
  <li><a href="{{ path('blogger_admin_homepage')}}">文章列表</a></li>
  <li><a href="{{ path('blogger_classify_homepage')}}">文章分类</a></li>
  <li><a href="{{ path('blogger_classify_addpage')}}">添加分类</a></li>
  <li class="active"><a href="{{ path('blogger_admin_addpage')}}">添加文章</a></li>
{%endblock%}
{% block show %}
<h3>文章添加</h3>
<hr>

<form action="{{ path('blogger_admin_modpage',{'id':blog.id}) }}" method="post" {{ form_enctype(form) }} class="blogger form-horizontal">
  {{ form_errors(form) }}
 
    <div class="control-group">
    <label class="control-label" for="inputtext">{{ form_label(form.title, '标题') }}</label>
    <div class="controls">
    {{ form_errors(form.title) }}
    {{ form_widget(form.title) }}
    <font color="red">&nbsp;&nbsp;*</font>
    </div>
    </div>
    <div class="control-group">
    <label class="control-label" for="inputselect">{{ form_label(form.classify, '文章分类') }}</label>
    <div class="controls">
	    {{ form_errors(form.classify) }}
    	{{ form_widget(form.classify) }}
		<font color="red">&nbsp;&nbsp;*</font>
    </div>
    </div>
    <div class="control-group">
    <label class="control-label" for="inputselect">{{ form_label(form.important,'文章重要性') }}</label>
    <div class="controls">
    {{ form_errors(form.important) }}
	{{ form_widget(form.important) }}
    </div>
    </div>
    <div class="control-group">
    <label class="control-label" for="inputselect">	{{ form_label(form.is_open,'是否显示') }}</label>
    <div class="controls">
	{{ form_errors(form.is_open) }}
	{{ form_widget(form.is_open) }}
    </div>
    </div>
    <div class="control-group">
    <label class="control-label" for="inputtext">{{ form_label(form.author, '文章作者') }}</label>
    <div class="controls">
    {{ form_errors(form.author) }}
	{{ form_widget(form.author) }}
    </div>
    </div>
    <div class="control-group">
    <label class="control-label" for="inputEmail">{{ form_label(form.author_email, '作者email') }}</label>
    <div class="controls">
    {{ form_errors(form.author_email) }}
	{{ form_widget(form.author_email) }}
    </div>
    </div>
    <div class="control-group">
    <label class="control-label" for="inputEmail">{{ form_label(form.keywords, '关键词') }}</label>
    <div class="controls">
   {{ form_errors(form.keywords) }}
	{{ form_widget(form.keywords) }}
    </div>
    </div>
    <div class="control-group">
    <label class="control-label" for="inputEmail">{{ form_label(form.description, '网页描述') }}</label>
    <div class="controls">
    {{ form_errors(form.description) }}
	{{ form_widget(form.description) }}
    </div>
    </div>
    <div class="control-group">
    <label class="control-label" for="inputEmail">{{ form_label(form.link, '外边链接') }}</label>
    <div class="controls">
    {{ form_errors(form.link) }}
	{{ form_widget(form.link) }}
    </div>
    </div>
    <div class="control-group">
    <label class="control-label" for="inputEmail">{{ form_label(form.content, '文章内容') }}</label>
    <div class="controls">
    {{ form_errors(form.content) }}
	{{ form_widget(form.content) }}
    </div>
    </div>
    <div class="control-group">
    <div class="controls">
    {{ form_errors(form.created) }}
	{{ form_widget(form.created) }}
    </div>
    </div>
     {{ form_rest(form) }}
    <div class="control-group">
    <div class="controls">
    <button type="submit" class="btn btn-primary">添加</button>
    <button type="reset" class="btn btn-warning">重置</button>
    </div>
    </div>
</form>
{% endblock %}