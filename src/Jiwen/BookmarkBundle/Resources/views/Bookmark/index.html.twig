{% extends 'SyliusWebBundle:Frontend/Account:layout.html.twig' %}

{% block content -%}
    <h1>Bookmark list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>User</th>
                <th>Product</th>
                <th>Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in bookmarks %}
            <tr>
                <td>{{ entity.id }}</td>
                <td>{{ entity.user }}</td>
                <td>{{ entity.product }}</td>
                <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
