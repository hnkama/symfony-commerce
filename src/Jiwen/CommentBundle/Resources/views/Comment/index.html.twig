{% extends 'SyliusWebBundle:Frontend/Account:layout.html.twig' %}

{% block content -%}
    <h1>Comment list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Comment</th>
                <th>Score</th>
                <th>Created</th>
                <th>Path</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('account_comment_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.comment }}</td>
                <td>{{ entity.score }}</td>
                <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.path }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('account_comment_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('account_comment_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('account_comment_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
