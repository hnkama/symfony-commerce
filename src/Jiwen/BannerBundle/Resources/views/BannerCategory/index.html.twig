{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% block content -%}
    <h1>BannerCategory list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Target</th>
                <th>Width</th>
                <th>Height</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('bannercategory_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.target }}</td>
                <td>{{ entity.width }}</td>
                <td>{{ entity.height }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('bannercategory_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('bannercategory_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('bannercategory_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
