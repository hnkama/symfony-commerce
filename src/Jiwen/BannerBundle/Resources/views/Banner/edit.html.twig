{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% block content -%}
<div class="page-header">
		
    <h1><i class="icon-pencil"></i>{{ 'sylius.backend.menu.main.banner_edit'|trans }}</h1>
	</div>

    <form action="{{ path('banner_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">Edit</button>
        </p>
    </form>

        <ul class="record_actions">
    <li>
        <a href="{{ path('banner') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('banner_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
