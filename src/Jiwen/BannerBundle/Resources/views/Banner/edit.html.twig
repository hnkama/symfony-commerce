{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% block content -%}
<div class="page-header">
		
    <h1><i class="icon-pencil"></i>{{ 'sylius.backend.menu.main.banner_edit'|trans }}</h1>
	</div>

    <form action="{{ path('banner_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_row(edit_form.name) }}
        {% if edit_form.vars.value.path is not null %}
            <img src="{{ asset('uploads/documents/' ~ edit_form.vars.value.path) }}" />
        {% endif %}
        {{ form_row(edit_form.file) }}
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">编辑</button>
        </p>
    </form>

        <ul class="record_actions">
    <li>
        <a href="{{ path('banner') }}">
            返回列表
        </a>
    </li>
    <li>
        <form action="{{ path('banner_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit" onclick="return confirm('确定要删除吗？')" class="btn btn-danger">删除</button>
        </form>
    </li>
</ul>
{% endblock %}
